<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyDark">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@id/search_destination"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/map_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_transparent"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="@id/map"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/search_destination"
        style="@style/edtStyle_Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_margin_10"
        android:hint="@string/destinatie"
        android:inputType="textEmailAddress"
        android:textIsSelectable="true"
        android:drawableStart="@drawable/search_location"
        app:commitIcon="@drawable/search_location"
        app:goIcon="@drawable/search_location"
        app:queryHint="@string/destinatie"
        app:searchHintIcon="@drawable/search_location"
        app:searchIcon="@drawable/search_location"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_report"
        app:layout_constraintTop_toBottomOf="@id/map"
       />

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_10"
        android:layout_marginRight="@dimen/dimen_margin_10"
        android:layout_marginBottom="@dimen/dimen_margin_10"
        android:background="@drawable/report_light"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_destination"
        app:layout_constraintTop_toBottomOf="@+id/map" />
</androidx.constraintlayout.widget.ConstraintLayout>