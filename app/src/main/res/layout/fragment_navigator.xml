<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gpb="http://schemas..com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ntb_bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_navigator_height"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:ntb_active_color="@color/colorRed"
        app:ntb_animation_duration="400"
        app:ntb_bg_color="@color/colorGreyLightOpacity_90"
        app:ntb_icon_size_fraction="0.5"
        app:ntb_inactive_color="@color/colorGrey"
        app:ntb_badge_bg_color="@color/colorGrey"
        android:backgroundTint="@color/colorGrey"
        app:ntb_badge_title_color="@color/colorGrey"
       android:outlineAmbientShadowColor="@color/colorGrey"
        android:foregroundTint="@color/colorGrey"
        android:foregroundTintMode="src_in"
        android:backgroundTintMode="src_in"
        app:ntb_badge_gravity="bottom"
        app:ntb_title_mode="active"
        app:ntb_scaled="true"
        app:ntb_swiped="true"
        app:ntb_tinted="true" />
</androidx.constraintlayout.widget.ConstraintLayout>